<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:orientation="vertical"
    tools:context=".MyCalculator">

    <TextView
        android:id="@+id/calculator_result"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:layout_marginBottom="20dp"
        android:background="@drawable/calculation_result_textview"
        android:textColor="#000000"
        android:textSize="24dp"
        />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        >
        <TableRow
            android:layout_height="0dp"
            android:layout_weight="1"
            >
            <Button
                android:id="@+id/button_number_1"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="1"
                android:textSize="40dp"
                android:onClick="numberClick"
              />

            <Button
                android:id="@+id/button_number_2"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="2"
                android:textSize="40dp"
                android:onClick="numberClick"
            />

            <Button
                android:id="@+id/button_number_3"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="3"
                android:textSize="40dp"
                android:onClick="numberClick"
            />

            <Button
                android:id="@+id/button_plus"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="+"
                android:textSize="40dp"
                android:onClick="symbolClick"
            />
        </TableRow>

        <TableRow
            android:layout_height="0dp"
            android:layout_weight="1"
            >
            <Button
                android:id="@+id/button_number_4"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="4"
                android:textSize="40dp"
                android:onClick="numberClick"
                />

            <Button
                android:id="@+id/button_number_5"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="5"
                android:textSize="40dp"
                android:onClick="numberClick"
                />

            <Button
                android:id="@+id/button_number_6"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="6"
                android:textSize="40dp"
                android:onClick="numberClick"
                />

            <Button
                android:id="@+id/button_minus"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="-"
                android:textSize="40dp"
                android:onClick="symbolClick"
                />
        </TableRow>

        <TableRow
            android:layout_height="0dp"
            android:layout_weight="1"
            >
            <Button
                android:id="@+id/button_number_7"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="7"
                android:textSize="40dp"
                android:onClick="numberClick"
                />

            <Button
                android:id="@+id/button_number_8"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="8"
                android:textSize="40dp"
                android:onClick="numberClick"
                />

            <Button
                android:id="@+id/button_number_9"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="9"
                android:textSize="40dp"
                android:onClick="numberClick"
                />

            <Button
                android:id="@+id/button_multiply"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="X"
                android:textSize="40dp"
                android:onClick="symbolClick"
                />
        </TableRow>

        <TableRow
            android:layout_height="0dp"
            android:layout_weight="1"
            >
            <Button
                android:id="@+id/button_number_0"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="0"
                android:textSize="40dp"
                android:onClick="numberClick"
                />

            <Button
                android:id="@+id/button_point"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="."
                android:textSize="40dp"
                android:onClick="symbolClick"
                />

            <Button
                android:id="@+id/button_equal"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="="
                android:textSize="40dp"
                android:onClick="symbolClick"
                />

            <Button
                android:id="@+id/button_slash"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="/"
                android:textSize="40dp"
                android:onClick="symbolClick"
                />
        </TableRow>

    </TableLayout>

    <Button
        android:id="@+id/webview_exe_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="WebView 실행"
        android:textSize="24dp"
        android:onClick="startWebViewActivity"
        />

</LinearLayout>